{
  "*.{ts,tsx}": [
    "prettier --write",
    "eslint --fix --max-warnings 0"
  ],
  "*.{js,jsx}": [
    "prettier --write",
    "eslint --fix --max-warnings 0"
  ],
  "*.{json,md,yml,yaml}": [
    "prettier --write"
  ],
  "*.css": [
    "prettier --write"
  ],
  "backend/**/*.ts": [
    "cd backend && npx tsc --noEmit"
  ],
  "app/**/*.{ts,tsx}": [
    "cd app && npx tsc --noEmit"
  ],
  "metaverse-game/**/*.{ts,tsx}": [
    "cd metaverse-game && npx tsc --noEmit || true"
  ]
}