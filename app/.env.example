# WalletConnect Project ID (get one at https://cloud.walletconnect.com)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Backend API URL
VITE_API_URL=http://localhost:4000/graphql

# WebSocket URL
VITE_WS_URL=ws://localhost:4000/graphql

# HyperEVM Configuration
# Chain ID: 999 for mainnet, 998 for testnet
VITE_CHAIN_ID=999
VITE_USE_MAINNET=true
# For testnet:
# VITE_CHAIN_ID=998
# VITE_USE_MAINNET=false

# Wallet Addresses (must match backend configuration)
VITE_DEPLOYMENT_WALLET_ADDRESS=0x0000000000000000000000000000000000000000  # Receives bot deployment fees
VITE_TREASURY_WALLET_ADDRESS=0x0000000000000000000000000000000000000000    # Platform treasury

# HyperEVM Bridge Address (for UI display)
VITE_HYPEREVM_BRIDGE_ADDRESS=0x2222222222222222222222222222222222222222

# Fee Configuration
VITE_DEPLOYMENT_FEE_HYPE=0.01
VITE_TOURNAMENT_FEE_PERCENTAGE=5

# Optional: Custom RPC URLs (if not using defaults)
# VITE_RPC_URL_MAINNET=https://rpc.hyperliquid.xyz/evm
# VITE_RPC_URL_TESTNET=https://rpc.hyperliquid-testnet.xyz/evm

# AI Service Configuration
VITE_AI_API_ENDPOINT=/api/ai
VITE_AI_API_KEY=your_ai_api_key_here
VITE_DEEPSEEK_API_URL=https://api.deepseek.com/v1