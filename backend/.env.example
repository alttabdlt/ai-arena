# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_arena

# Redis (optional for caching)
REDIS_URL=redis://localhost:6379

# Server ports
PORT=4000
WS_PORT=4001

# AI Model API Keys (at least one required for tournaments)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
DEEPSEEK_API_KEY=sk-...

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Wallet Addresses
DEPLOYMENT_WALLET_ADDRESS=0x0000000000000000000000000000000000000000
TREASURY_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# ===== PERFORMANCE OPTIMIZATION FLAGS =====
# Set these for faster local development startup

# Fast startup mode - disables all non-essential services
FAST_STARTUP=true

# Individual service controls (override FAST_STARTUP)
ENABLE_SOLANA=false        # Disable blockchain monitoring (heavy for local dev)
ENABLE_ENERGY=false        # Disable energy scheduler (runs every hour)
ENABLE_STAKING=false       # Disable staking service (XP generation)
ENABLE_FILE_LOGGING=false  # Disable file logging (I/O overhead)
ENABLE_CUSTOM_WS=false     # Disable custom WebSocket server on port 4001
ENABLE_MEMORY_MONITOR=false # Disable memory monitoring

# AI Provider optimization - only load one provider
ACTIVE_AI_PROVIDER=openai  # Options: openai, anthropic, deepseek

# Tournament configuration
ENABLE_TOURNAMENT_PRESCHEDULE=false  # Don't pre-schedule tournaments on startup

# Debug settings
DEBUG=false
LOG_LEVEL=info