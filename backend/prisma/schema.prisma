// ============================================
// Arena PvP System (OpenClaw Agent Framework)
// ============================================

model ArenaAgent {
  id              String          @id @default(cuid())
  name            String          @unique
  archetype       AgentArchetype  @default(CHAMELEON)
  modelId         String          // LLM model identifier (e.g., "gpt-4o", "claude-4-sonnet")
  walletAddress   String?         @unique // Monad EOA address
  apiKey          String          @unique // Bearer token for REST API auth
  
  // Strategy
  systemPrompt    String          @default("") // Custom strategy instructions
  riskTolerance   Float           @default(0.5) // 0.0 = ultra-conservative, 1.0 = degen
  maxWagerPercent Float           @default(0.15) // Max % of bankroll per wager
  
  // Stats
  elo             Int             @default(1500)
  bankroll        Int             @default(10000) // $ARENA balance (off-chain tracking)
  wins            Int             @default(0)
  losses          Int             @default(0)
  draws           Int             @default(0)
  totalWagered    Int             @default(0)
  totalWon        Int             @default(0)
  totalRake       Int             @default(0) // Total rake paid
  apiCostCents    Int             @default(0) // Cumulative LLM API cost in cents
  
  // State
  isActive        Boolean         @default(true)
  isInMatch       Boolean         @default(false)
  currentMatchId  String?
  lastActiveAt    DateTime        @default(now())
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  // Relations
  matchesAsPlayer1  ArenaMatch[]    @relation("player1")
  matchesAsPlayer2  ArenaMatch[]    @relation("player2")
  matchesWon        ArenaMatch[]    @relation("winner")
  moves             ArenaMove[]
  opponentRecords   OpponentRecord[] @relation("agent")
  opponentOf        OpponentRecord[] @relation("opponent")
  tournamentEntries ArenaTournamentEntry[]
  
  @@index([elo])
  @@index([isActive])
  @@index([archetype])
  @@index([apiKey])
}

model ArenaMatch {
  id              String          @id @default(cuid())
  gameType        ArenaGameType
  status          ArenaMatchStatus @default(WAITING)
  
  // Players
  player1Id       String
  player2Id       String?
  winnerId        String?
  
  // Wager
  wagerAmount     Int             @default(0) // $ARENA per player
  totalPot        Int             @default(0) // wagerAmount * 2
  rakeAmount      Int             @default(0) // 5% of pot
  
  // Game state
  gameState       String          @default("{}") // JSON serialized game state
  turnNumber      Int             @default(0)
  currentTurnId   String?         // Agent ID whose turn it is
  
  // On-chain (nullable until Monad integration)
  depositTxHash   String?
  resolveTxHash   String?
  
  // Timing
  createdAt       DateTime        @default(now())
  startedAt       DateTime?
  completedAt     DateTime?
  
  // Tournament reference
  tournamentId    String?
  tournament      ArenaTournament? @relation(fields: [tournamentId], references: [id])
  
  // Relations
  player1         ArenaAgent      @relation("player1", fields: [player1Id], references: [id])
  player2         ArenaAgent?     @relation("player2", fields: [player2Id], references: [id])
  winner          ArenaAgent?     @relation("winner", fields: [winnerId], references: [id])
  moves           ArenaMove[]
  
  @@index([status])
  @@index([player1Id])
  @@index([player2Id])
  @@index([gameType])
  @@index([createdAt])
  @@index([tournamentId])
}

model ArenaMove {
  id              String          @id @default(cuid())
  matchId         String
  agentId         String
  turnNumber      Int
  action          String          // JSON: {"action": "raise", "amount": 100}
  reasoning       String          @default("") // LLM's explanation
  gameStateBefore String          @default("{}") // Snapshot before move
  apiCostCents    Int             @default(0) // Cost of this LLM call
  responseTimeMs  Int             @default(0) // LLM response latency
  timestamp       DateTime        @default(now())
  
  match           ArenaMatch      @relation(fields: [matchId], references: [id], onDelete: Cascade)
  agent           ArenaAgent      @relation(fields: [agentId], references: [id])
  
  @@index([matchId, turnNumber])
  @@index([agentId])
}

model OpponentRecord {
  id              String          @id @default(cuid())
  agentId         String          // The agent who owns this scouting report
  opponentId      String          // The opponent being scouted
  
  // Stats
  matchesPlayed   Int             @default(0)
  wins            Int             @default(0)
  losses          Int             @default(0)
  draws           Int             @default(0)
  
  // Behavioral data (JSON blobs for flexibility)
  patterns        String          @default("{}") // Tracked patterns per game type
  notes           String          @default("") // Agent's own notes about this opponent
  
  lastPlayedAt    DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  agent           ArenaAgent      @relation("agent", fields: [agentId], references: [id], onDelete: Cascade)
  opponent        ArenaAgent      @relation("opponent", fields: [opponentId], references: [id], onDelete: Cascade)
  
  @@unique([agentId, opponentId])
  @@index([agentId])
  @@index([opponentId])
}

model ArenaTournament {
  id              String                @id @default(cuid())
  name            String
  format          TournamentFormat      @default(SWISS)
  status          ArenaTournamentStatus @default(SCHEDULED)
  
  // Config
  gameTypes       String                @default("[]") // JSON array of game types
  wagerPerMatch   Int                   @default(100)
  totalRounds     Int                   @default(5)
  currentRound    Int                   @default(0)
  
  // Results
  prizePool       Int                   @default(0)
  
  createdAt       DateTime              @default(now())
  startedAt       DateTime?
  completedAt     DateTime?
  
  matches         ArenaMatch[]
  entries         ArenaTournamentEntry[]
  
  @@index([status])
}

model ArenaTournamentEntry {
  id              String          @id @default(cuid())
  tournamentId    String
  agentId         String
  score           Float           @default(0)
  buchholz        Float           @default(0) // Tiebreaker
  rank            Int?
  
  tournament      ArenaTournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  agent           ArenaAgent      @relation(fields: [agentId], references: [id])
  
  @@unique([tournamentId, agentId])
  @@index([tournamentId])
  @@index([agentId])
}

enum AgentArchetype {
  SHARK       // Aggressive, big bluffs, pressure
  ROCK        // Conservative, only strong hands
  CHAMELEON   // Adaptive, counter-strategy
  DEGEN       // Chaotic, unpredictable, YOLO
  GRINDER     // Mathematical, Kelly Criterion, +EV
}

enum ArenaGameType {
  POKER
  RPS
  BATTLESHIP
}

enum ArenaMatchStatus {
  WAITING       // Player 1 created, waiting for opponent
  ACTIVE        // Both players in, game in progress
  COMPLETED     // Game finished, winner determined
  CANCELLED     // Match cancelled before completion
  TIMEOUT       // Match timed out
}

enum TournamentFormat {
  SWISS
  ROUND_ROBIN
  SINGLE_ELIMINATION
}

enum ArenaTournamentStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}
