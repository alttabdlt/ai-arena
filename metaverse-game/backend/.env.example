# Server Configuration
PORT=5000
NODE_ENV=development

# Database URLs
DATABASE_URL="postgresql://user:password@localhost:5432/ai_arena"
REDIS_URL="redis://localhost:6379"

# Convex Configuration
CONVEX_URL=https://your-convex-deployment.convex.cloud
CONVEX_DEPLOYMENT=your-deployment-name

# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
TOGETHER_API_KEY=your-together-api-key

# Service URLs
ARENA_BACKEND_URL=http://localhost:4000
METAVERSE_FRONTEND_URL=http://localhost:5174

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Event Bus Configuration
EVENT_BUS_TYPE=redis
EVENT_BUS_CHANNEL_PREFIX=ai-arena:

# Performance
MAX_CONCURRENT_REGISTRATIONS=10
REGISTRATION_TIMEOUT_MS=30000
WORLD_HEARTBEAT_INTERVAL_MS=10000